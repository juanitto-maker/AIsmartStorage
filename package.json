{
  "name": "smart-storage-ai",
  "version": "0.1.0",
  "description": "Privacy-first AI file organizer - 100% local, zero network calls",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "android:release": "npm run build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "icons:generate": "node generate-icons.mjs && node generate-android-icons.mjs",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@tauri-apps/api": "^2.0.0",
    "idb": "^8.0.0",
    "lucide-solid": "^0.294.0",
    "solid-js": "^1.8.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^20.10.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-solid": "^2.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juanitto-maker/AIsmartStorage"
  },
  "keywords": [
    "file-organizer",
    "ai",
    "privacy",
    "local-first",
    "tauri",
    "solidjs"
  ],
  "author": "Smart Storage AI Contributors",
  "license": "MIT"
}
